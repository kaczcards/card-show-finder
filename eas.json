{
  "cli": {
    "version": ">= 16.14.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "environment": "development",
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "cache": {
        "key": "dev-${{ github.sha }}"
      },
      "env": {
        "APP_ENV": "development"
      },
      "ios": {
        "resourceClass": "m-medium",
        "autoIncrement": "buildNumber",
        "scheme": "cardshowfinderDev"
      },
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "resourceClass": "medium",
        "autoIncrement": false,
        "credentialsSource": "remote",
        "buildType": "apk"
      }
    },
    "preview": {
      "environment": "preview",
      "distribution": "internal",
      "developmentClient": false,
      "channel": "preview",
      "env": {
        "APP_ENV": "preview"
      },
      "cache": {
        "key": "preview-${{ github.sha }}"
      },
      "ios": {
        "resourceClass": "m-medium",
        "autoIncrement": "buildNumber",
        "scheme": "cardshowfinderPreview"
      },
      "android": {
        "resourceClass": "large",
        "autoIncrement": "versionCode",
        "credentialsSource": "remote",
        "withoutCredentials": false,
        "gradleCommand": ":app:bundleRelease",
        "buildType": "apk"
      }
    },
    "staging": {
      "environment": "staging",
      "distribution": "internal",
      "developmentClient": false,
      "channel": "staging",
      "env": {
        "APP_ENV": "staging"
      },
      "cache": {
        "key": "staging-${{ github.sha }}",
        /* default cache paths are applied automatically;
           deprecated flag removed per Expo docs */
      },
      "ios": {
        "resourceClass": "m-medium",
        "autoIncrement": "buildNumber",
        "scheme": "cardshowfinderStaging"
      },
      "android": {
        "resourceClass": "large",
        "autoIncrement": false,
        "credentialsSource": "remote",
        "withoutCredentials": true,
        "buildType": "apk"
      }
    },
    "production": {
      "environment": "production",
      "channel": "production",
      "developmentClient": false,
      "env": {
        "APP_ENV": "production"
      },
      "cache": {
        "key": "prod-${{ eas.build.id }}"
      },
      "ios": {
        "resourceClass": "large",
        "autoIncrement": "buildNumber",
        "scheme": "cardshowfinder"
      },
      "android": {
        "resourceClass": "large",
        "autoIncrement": false,
        "credentialsSource": "remote",
        "buildType": "app-bundle"
      }
    },

    /* --------------------------------------------------------------------
       DEBUG PROFILE  (temporary – no keystore / unsigned build)
       ----------------------------------------------------------
       Purpose: generate an **unsigned debug APK** for internal QA while
       we wait for final Google Play keystore / API approvals.
       • Uses :app:assembleDebug so no signing is required
       • withoutCredentials = true skips Expo credential checks entirely
       • credentialsSource = local prevents any remote lookup
       ------------------------------------------------------------------ */
    "debug": {
      "environment": "development",
      "distribution": "internal",
      "developmentClient": false,
      "channel": "debug",
      "env": {
        "APP_ENV": "debug"
      },
      "cache": {
        "key": "debug-${{ github.sha }}"
      },
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "buildType": "apk",
        "credentialsSource": "local",
        "withoutCredentials": true,
        "resourceClass": "medium",
        "autoIncrement": false
      }
    }
  },
  "submit": {
    "staging": {
      "ios": {
        "appleId": "$APPLE_ID",
        "ascAppId": "$ASC_APP_ID",
        "appleTeamId": "$APPLE_TEAM_ID"
      },
      "android": {
        "serviceAccountKeyPath": "./android-service-account.json",
        "track": "internal"
      }
    },
    "production": {
      "ios": {
        "appleId": "$APPLE_ID",
        "ascAppId": "$ASC_APP_ID",
        "appleTeamId": "$APPLE_TEAM_ID"
      },
      "android": {
        "serviceAccountKeyPath": "./android-service-account.json",
        "track": "production"
      }
    }
  }
}
